<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <description>FlowSense Run Explorer - Timeline visualization of flow execution</description>
    <masterLabel>FS Run Explorer</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__Tab</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>FS_Flow_Run__c</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="runId" type="String" label="Flow Run ID" description="ID of the Flow Run to display"/>
            <property name="height" type="String" default="600px" label="Component Height" description="Height of the component"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>