<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="chartType" type="String" default="line" description="Type of chart to display (line, bar, doughnut, radar)"/>
            <property name="chartTitle" type="String" default="Performance Metrics" description="Chart title"/>
            <property name="chartHeight" type="String" default="400" description="Chart height in pixels"/>
            <property name="showLegend" type="Boolean" default="false" description="Show chart legend"/>
            <property name="responsive" type="Boolean" default="false" description="Enable responsive chart"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>