<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <description>FlowSense Document Viewer - View and edit flow documentation and analysis reports</description>
    <masterLabel>FS Document Viewer</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__Tab</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>FS_Flow_Run__c</object>
                <object>FS_Flow_Document__c</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="height" type="String" default="600px" label="Component Height" description="Height of the component"/>
            <property name="flowId" type="String" label="Flow ID" description="ID of the flow to show documents for"/>
            <property name="documentId" type="String" label="Document ID" description="Specific document ID to load"/>
            <property name="readOnly" type="Boolean" default="false" label="Read Only" description="Whether the component is read-only"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>