<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>FlowSense Integration Channel</label>
    <pluralLabel>FlowSense Integration Channels</pluralLabel>
    <description>Configuration for external integration channels (Slack, Teams, WhatsApp, etc.)</description>
    <visibility>Public</visibility>
    
    <!-- Channel Type -->
    <fields>
        <fullName>Channel_Type__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Channel Type</label>
        <required>true</required>
        <type>Picklist</type>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>Email</fullName>
                    <default>false</default>
                    <label>Email</label>
                </value>
                <value>
                    <fullName>Slack</fullName>
                    <default>false</default>
                    <label>Slack</label>
                </value>
                <value>
                    <fullName>Teams</fullName>
                    <default>false</default>
                    <label>Microsoft Teams</label>
                </value>
                <value>
                    <fullName>WhatsApp</fullName>
                    <default>false</default>
                    <label>WhatsApp</label>
                </value>
                <value>
                    <fullName>Webhook</fullName>
                    <default>false</default>
                    <label>Custom Webhook</label>
                </value>
            </valueSetDefinition>
        </valueSet>
    </fields>
    
    <!-- Active Status -->
    <fields>
        <fullName>Active__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Active</label>
        <type>Checkbox</type>
    </fields>
    
    <!-- Webhook URL -->
    <fields>
        <fullName>Webhook_URL__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Webhook URL</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <!-- Slack Configuration -->
    <fields>
        <fullName>Slack_Token__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Slack Token</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <fields>
        <fullName>Slack_Channel__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Slack Channel</label>
        <length>100</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <!-- Teams Configuration -->
    <fields>
        <fullName>Teams_Webhook__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Teams Webhook URL</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <!-- WhatsApp Configuration -->
    <fields>
        <fullName>WhatsApp_Endpoint__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>WhatsApp API Endpoint</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <fields>
        <fullName>WhatsApp_Phone_Number__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>WhatsApp Phone Number</label>
        <length>50</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <!-- Named Credential -->
    <fields>
        <fullName>Named_Credential__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Named Credential</label>
        <length>100</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <!-- Authentication -->
    <fields>
        <fullName>Auth_Type__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Authentication Type</label>
        <required>false</required>
        <type>Picklist</type>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>None</fullName>
                    <default>true</default>
                    <label>None</label>
                </value>
                <value>
                    <fullName>Bearer_Token</fullName>
                    <default>false</default>
                    <label>Bearer Token</label>
                </value>
                <value>
                    <fullName>OAuth2</fullName>
                    <default>false</default>
                    <label>OAuth 2.0</label>
                </value>
                <value>
                    <fullName>Basic_Auth</fullName>
                    <default>false</default>
                    <label>Basic Authentication</label>
                </value>
                <value>
                    <fullName>API_Key</fullName>
                    <default>false</default>
                    <label>API Key</label>
                </value>
            </valueSetDefinition>
        </valueSet>
    </fields>
    
    <!-- Timeout and Retry -->
    <fields>
        <fullName>Timeout_Seconds__c</fullName>
        <defaultValue>30</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Timeout (seconds)</label>
        <precision>3</precision>
        <required>false</required>
        <scale>0</scale>
        <type>Number</type>
    </fields>
    
    <fields>
        <fullName>Max_Retry_Attempts__c</fullName>
        <defaultValue>3</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Max Retry Attempts</label>
        <precision>2</precision>
        <required>false</required>
        <scale>0</scale>
        <type>Number</type>
    </fields>
</CustomObject>
