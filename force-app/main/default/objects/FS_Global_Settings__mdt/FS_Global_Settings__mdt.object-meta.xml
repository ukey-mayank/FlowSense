        <precision>5</precision>
        <required>false</required>
        <scale>0</scale>
        <type>Number</type>
    </fields>
    
    <fields>
        <fullName>Enable_Async_Processing__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Enable Async Processing</label>
        <type>Checkbox</type>
    </fields>
    
    <!-- Documentation Settings -->
    <fields>
        <fullName>Auto_Generate_Documentation__c</fullName>
        <defaultValue>false</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Auto Generate Documentation</label>
        <type>Checkbox</type>
    </fields>
    
    <fields>
        <fullName>Documentation_Template__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Documentation Template</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <!-- Archive Retention -->
    <fields>
        <fullName>Archive_Retention_Days__c</fullName>
        <defaultValue>365</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Archive Retention Days</label>
        <precision>5</precision>
        <required>false</required>
        <scale>0</scale>
        <type>Number</type>
    </fields>
</CustomObject>
