<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>FlowSense AI Settings</label>
    <pluralLabel>FlowSense AI Settings</pluralLabel>
    <description>Configuration for AI-powered features and integrations</description>
    <visibility>Public</visibility>
    
    <!-- AI Provider -->
    <fields>
        <fullName>Provider__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>AI Provider</label>
        <required>true</required>
        <type>Picklist</type>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>OpenAI</fullName>
                    <default>true</default>
                    <label>OpenAI</label>
                </value>
                <value>
                    <fullName>Azure_OpenAI</fullName>
                    <default>false</default>
                    <label>Azure OpenAI</label>
                </value>
                <value>
                    <fullName>Anthropic</fullName>
                    <default>false</default>
                    <label>Anthropic Claude</label>
                </value>
                <value>
                    <fullName>Google_AI</fullName>
                    <default>false</default>
                    <label>Google AI</label>
                </value>
                <value>
                    <fullName>Custom</fullName>
                    <default>false</default>
                    <label>Custom Provider</label>
                </value>
            </valueSetDefinition>
        </valueSet>
    </fields>
    
    <!-- Named Credential -->
    <fields>
        <fullName>Named_Credential__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Named Credential</label>
        <length>100</length>
        <required>true</required>
        <type>Text</type>
    </fields>
    
    <!-- Model Configuration -->
    <fields>
        <fullName>Model__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Model Name</label>
        <length>100</length>
        <required>false</required>
        <type>Text</type>
    </fields>
    
    <fields>
        <fullName>Temperature__c</fullName>
        <defaultValue>0.7</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Temperature</label>
        <precision>3</precision>
        <required>false</required>
        <scale>2</scale>
        <type>Number</type>
    </fields>
    
    <fields>
        <fullName>Max_Tokens__c</fullName>
        <defaultValue>2000</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Max Tokens</label>
        <precision>6</precision>
        <required>false</required>
        <scale>0</scale>
        <type>Number</type>
    </fields>
    
    <!-- Feature Flags -->
    <fields>
        <fullName>Enable_Flow_Explanation__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Enable Flow Explanation</label>
        <type>Checkbox</type>
    </fields>
    
    <fields>
        <fullName>Enable_Test_Generation__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Enable Test Generation</label>
        <type>Checkbox</type>
    </fields>
    
    <fields>
        <fullName>Enable_Optimization_Hints__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Enable Optimization Hints</label>
        <type>Checkbox</type>
    </fields>
    
    <fields>
        <fullName>Enable_Formula_Generation__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Enable Formula Generation</label>
        <type>Checkbox</type>
    </fields>
    
    <!-- Active Status -->
    <fields>
        <fullName>Active__c</fullName>
        <defaultValue>false</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>SubscriberControlled</fieldManageability>
        <label>Active</label>
        <type>Checkbox</type>
    </fields>
</CustomObject>
